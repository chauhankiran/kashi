.modal {
    display: none;
    position: fixed;
    z-index: 91;
    padding-top: 2rem;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, .4);
}

.modal-close {
    color: var(--black);
    float: right;
    font-size: 2rem;
    font-weight: bold;
}
.modal-close:hover,
.modal-close:focus {
    color: var(--black);
    text-decoration: none;
    cursor: pointer;
}

.modal-content {
    position: relative;
    background-color: var(--white);
    margin: auto;
    padding: 0;
    border: 2px solid var(--black);
    width: 70%;
    box-shadow: 3px 4px 0px var(--black);
}

.modal-header {
    padding: .2rem 1rem;
    color: var(--black);
    border-bottom: 1px solid var(--black);
}
.modal-body {
    padding: 1rem;
}
.modal-footer {
    padding: .2rem 1rem;
    color: var(--black);
    border-top: 1px solid var(--black);
}