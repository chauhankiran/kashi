table
  border-collapse collapse
  width 100%
  margin-bottom 1rem
  overflow-x auto

th,
td
  padding .75rem
  border-top 1px solid #dee2e6

thead th
  border-bottom 2px solid #ddd
  text-align inherit

.table-bordered
  border 1px solid #dee2e6

.table-hover tbody tr:hover
  background-color rgba(0,0,0,.075)
