.npt
  border 2px solid lighten(black, 20%)
  padding .5rem .8rem
  display inline-block
  margin-bottom .5rem
  margin-top .5rem

.npt:focus
  border-color black

.npt-brand
  border 2px solid lighten(brand, 20%)

.npt-brand:focus
  border-color brand

.npt:disabled,
.npt.disabled
  border-color lighten(black, 60%)

.npt-brand:disabled,
.npt-brand.disabled
  border-color lighten(brand, 60%)

.npt-lg
  display block
  width 100%

.slct
  background-color white
  color black
  border 2px solid lighten(black, 20%)
  padding .5rem .8rem
  display inline-block
  margin-top .5rem
  margin-bottom .5rem

.slct-brand
  border-color lighten(brand, 20%)

.slct-lg
  display block
  width 100%