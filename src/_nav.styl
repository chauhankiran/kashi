.nav {
    display: flex;
    min-height: var(--nav-height);
    align-items: stretch;
}
.nav.bb {
    background-color: var(--supportive);
    border-bottom: 1px solid var(--primary);
}
.nav.shadow {
    background-color: var(--supportive);
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}
.nav.sticky {
    position: sticky;
    top: 0;
    z-index: 1030;
}
.nav .left,
.nav .center,
.nav .right {
    display: flex;
    flex: 1;
}
.nav .left {
    justify-content: flex-start;
}
.nav .center {
    justify-content: center;
}
.nav .right {
    justify-content: flex-end;
}
.nav a,
.nav .brand {
    display: flex;
    align-items: center;
    padding: 1rem;
    color: var(--primary);
    text-decoration: none;
}
.nav .brand {
    color: var(--nav-brand-color);
    font-size: var(--nav-brand-size);
    padding-top: 0;
    padding-bottom: 0;
}
.nav a.active {
    text-decoration: var(--nav-active);
}
.inverse,
.inverse a,
.inverse.active,
.inverse.bb,
.inverse.shadow {
    color: var(--supportive) !important;
    background-color: var(--primary);
}
