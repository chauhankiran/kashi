.nav {
    display: flex;
    min-height: var(--nav-height);
    align-items: stretch;
}
.nav-left,
.nav-center,
.nav-right {
    display: flex;
    flex: 1;
}
.nav-left {
    justify-content: flex-start;
}
.nav-center {
    justify-content: center;
}
.nav-right {
    justify-content: flex-end;
}
.nav a,
.nav .brand {
    display: flex;
    align-items: center;
    padding: 1rem;
    color: var(--black);
    text-decoration: none;
}
.nav .brand {
    font-size: var(--nav-brand);
    padding-top: 0;
    padding-bottom: 0;
}
.nav a.active {
    text-decoration: var(--nav-active);
}