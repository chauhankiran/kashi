for header in (1..6)
    h{header}
        font-weight header-font-weight
        margin-top .5rem
        margin-bottom .5rem

headers = h1-size, h2-size, h3-size, h4-size, h5-size, h6-size
for header, type in headers
    h{type + 1}
        font-size header

address,
p
    font-size font-size
    margin-top 0
    margin-bottom font-size

small
    font-size small-font-size

a
    color brand
    text-decoration none

a:hover
    color darken(brand, 10%)