h1,
h2,
h3,
h4,
h5,
h6
  font-weight 400
  margin-top 0.5rem
  margin-bottom 0.5rem

h1
  font-size 2.5rem

h2
  font-size 2rem

h3
  font-size 1.5rem

h4
  font-size 1rem

h5
  font-size .9rem

h6
  font-size .8rem

address,
p
  font-size 1rem
  margin-top 0
  margin-bottom 1rem

.big-text
  font-size 1.3rem

small,
.small-text
  font-size .7rem

a
  color #c6262e

a:hover
  color #a10705
  text-decoration none

u
  text-decoration underline

b,
strong
  font-weight 700

i,
em
  font-style italic
