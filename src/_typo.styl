h1,
h2,
h3,
h4,
h5,
h6
  font-weight 400
  margin-top 0.5rem
  margin-bottom 0.5rem

// font size.
headers-font-size = 2.5rem, 2rem, 1.5rem, 1rem, .9rem, .8rem
for header-font-size, header-type in headers-font-size
  h{header-type + 1}
    font-size header-font-size

address,
p
  font-size 1rem
  margin-top 0
  margin-bottom 1rem

small,
  font-size .7rem

a
  color #c6262e

a:hover
  color #a10705
  text-decoration none

u
  text-decoration underline

b,
strong
  font-weight 700

i,
em
  font-style italic
