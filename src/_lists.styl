.lst
  list-style-type none
  padding-left 0
  display flex
  flex-direction column

.lst-tm
  background-color main-background
  display block
  padding .75rem 1.25rem
  border 1px solid lighten(main-foreground, 90%)
  margin-bottom -1px
    
  &:first-child
    border-top-left-radius .25rem
    border-top-right-radius .25rem
    
  &:last-child
    border-bottom-left-radius .25rem
    border-bottom-right-radius .25rem

  &.active
    background-color lighten(main-brand, 40%)
    color main-background

  &.disabled
    opacity .5

  &:not(.active):hover
    background-color lighten(main-foreground, 90%)
