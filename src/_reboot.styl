*,
*::before,
*::after
  box-sizing: border-box

html,
body
  margin 0
  padding 0

body
  background-color white
  color black
  font-size font-size
  line-height line-height
  // Do the hack
  font-family: 'Source Sans Pro', sans-serif;

a:hover,
a:active
  outline 0

b,
strong
  font-weight font-weight

code,
kbd,
pre,
samp
  font-family monospace, monospace

pre
  overflow auto

button,
input,
select,
textarea
  font-family inherit
  font-size inherit
  font-weight inherit
  line-height inherit
  margin 0

textarea
  overflow auto
  resize vertical
  min-height 5rem

img
  vertical-align middle